<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/orderIDTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_bold"/>
    <TextView
        android:id="@+id/orderDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderIDTV"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_bold"/>

    <TextView
        android:id="@+id/orderTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderIDTV"
        android:textSize="12sp"
        android:layout_toEndOf="@id/orderDateTV"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_bold"/>
    <TextView
        android:id="@+id/orderStatusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderTimeTV"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/comfortaa_bold"/>

        <TextView
            android:id="@+id/paymentStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderTimeTV"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/orderStatusTV"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/comfortaa_bold"/>
    </RelativeLayout>

</RelativeLayout>