<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/campaignCV"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="6dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/campaignImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/campaignImage"
                app:isHideTimeBackground="false"
                app:timeBgSize="50dp"
                app:timeBgColor="@color/GBlue"
                app:isShowDay="true"
                app:isShowHour="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:timeTextColor="#ffffff"
                app:timeTextSize="28sp"
                app:isTimeTextBold="true"
                app:suffixGravity="bottom"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                app:suffixTextColor="#000000"
                app:suffixTextSize="15sp"
                app:suffixDay="day"
                app:suffixHour="hr"
                app:suffixMinute="min"
                app:suffixSecond="sec"/>
            <LinearLayout
                android:id="@+id/liveLL"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/campaignImage"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="L"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="I"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="V"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="E"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".04"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/overLL"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/campaignImage"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="O"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="V"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="E"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".04"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/GBlue"
                    android:text="R"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_weight=".20"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".04"/>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/campaignRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campaignCV"
        android:background="@color/GGreen">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:fontFamily="@font/comfortaa_bold"/>

        <TextView
            android:id="@+id/cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:fontFamily="@font/comfortaa_bold"/>
    </RelativeLayout>

</RelativeLayout>