<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refundRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.RefundSettlementActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/themDark"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title="Refund Settlement"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@color/white"
                android:elevation="6dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:src="@drawable/nagad" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@id/nLogo"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Nagad Account"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/nDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nTitle"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@id/nLogo"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Enter the Nagad account info where you want to receive refunds from Mulven"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/nLogo"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/background_light_gray"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="center_vertical"
                        android:hint="Not Provided"
                        android:paddingStart="15dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/nEdit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/nNumber"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_background_blue"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/white"
                android:elevation="6dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:padding="5dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_bkash" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/bTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@id/bLogo"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="bKash Account"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/bDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bTitle"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@id/bLogo"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Enter the Bkash account info where you want to receive refunds from Mulven"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/bNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/bLogo"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/background_light_gray"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="center_vertical"
                        android:hint="Not Provided"
                        android:paddingStart="15dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/bEdit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/bNumber"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_background_blue"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"
                android:elevation="6dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/baLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:padding="5dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/bank_transfer" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/baTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@id/baLogo"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Bank Account"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/baTitle"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@id/baLogo"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Enter the Bank account info where you want to receive refunds from Mulven"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/baNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/baLogo"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/background_light_gray"
                        android:fontFamily="@font/comfortaa_bold"
                        android:paddingStart="15dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Name :"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/bankNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Branch Name :"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/branchNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Routing No :"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/routingNoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Name :"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/accountNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account No :"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/accountNoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/comfortaa_bold"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/baEdit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/baNumber"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_background_blue"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>