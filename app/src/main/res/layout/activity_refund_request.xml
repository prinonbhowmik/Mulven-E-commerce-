<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refundRequestRootLayout"
    tools:context=".Activities.RefundRequestActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/themDark"
            app:theme="@style/ToolbarColoredBackArrow"
            app:title="Refund Request"
            app:titleTextColor="@color/white" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/refundMethodList">
        <androidx.cardview.widget.CardView
            android:id="@+id/nagadCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:elevation="6dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/nagadLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:src="@drawable/nagad" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nagad_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/nagadLogo"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Nagad Account"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/nagad_Number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/nagad_Name"
                    android:layout_toEndOf="@+id/nagadLogo"
                    android:layout_toStartOf="@+id/nagad_CheckBox"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_light_gray"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />
                <CheckBox
                    android:id="@+id/nagad_CheckBox"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:layout_below="@id/nagad_Name"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bkashCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:elevation="6dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bkashLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_bkash" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/bkash_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/bkashLogo"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Nagad Account"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bkash_Number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/bkash_Name"
                    android:layout_toEndOf="@+id/bkashLogo"
                    android:layout_toStartOf="@+id/bkash_CheckBox"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_light_gray"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />
                <CheckBox
                    android:id="@+id/bkash_CheckBox"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:layout_below="@id/bkash_Name"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bankCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:elevation="6dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bankLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:src="@drawable/bank_transfer" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/bank_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/bankLogo"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Nagad Account"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bank_Number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/bank_Name"
                    android:layout_toEndOf="@+id/bankLogo"
                    android:layout_toStartOf="@+id/bank_CheckBox"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_light_gray"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />
                <CheckBox
                    android:id="@+id/bank_CheckBox"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:layout_below="@id/bank_Name"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:id="@+id/commentTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/refundMethodList"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:text="Description"
        android:textColor="@color/black"        />
    <EditText
        android:id="@+id/refundCommentET"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/commentTxt"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Write something..."
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:gravity="top|left"
        android:background="@drawable/background_stroke"
        android:fontFamily="@font/comfortaa_light"
        android:padding="10dp"
        android:textColor="@color/black"
        tools:ignore="TextFields" />

            <TextView
                android:id="@+id/applyRequestTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Apply"
                android:layout_below="@+id/refundCommentET"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:focusable="false"
                android:visibility="visible"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_background_blue"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/comfortaa"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSettlementBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/themDark"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        app:tint="#fff"
        android:src="@drawable/ic_add"/>
</RelativeLayout>