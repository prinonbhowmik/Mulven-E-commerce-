<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16sp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/m2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="How much do you want to pay?"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/m3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/comfortaa"
        android:text="You can always pay partial payment. We would suggest you to pay full amount to start processing your order."
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/m4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:text="Amount"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/makePayET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m4"
        android:inputType="numberDecimal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="500"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makePayET"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/closePayTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/background_light_red"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/continuePayTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/btn_background_blue"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>