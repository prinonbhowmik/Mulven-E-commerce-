<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/m1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comfortaa"
        android:text="Make Payment"
        android:textColor="@color/black"
        android:textSize="21sp" />
    <ImageView
        android:id="@+id/mpCloseIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"/>


    <TextView
        android:id="@+id/m2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:text="How much do you want to pay?"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/m3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/comfortaa"
        android:text="You can always pay partial payment. We would suggest you to pay full amount to start processing your order."
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/m4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:text="Amount"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/makePayET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m4"
        android:inputType="numberDecimal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="500"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/paymentMethodLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/makePayET"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="@color/bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/BankIV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="30dp"
                android:src="@drawable/bank_transfer"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/bg"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/nagadCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/spIV"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@+id/makePayET"
                android:src="@drawable/nagad" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@color/bg">

            <CheckBox
                android:id="@+id/shurjoPayCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/spIV2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/makePayET"
                android:src="@drawable/shurjo_pay" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/makePayTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentMethodLayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_blue"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Confirm Payment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>