<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="#F3F4F6"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/paymentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa_light"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text="01-02-2021 10:30 AM"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/paymentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/paymentTime"
            android:fontFamily="@font/comfortaa_light"
            android:layout_toStartOf="@id/paymentAmountTV"
            android:maxLines="2"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/black"
            android:text="Cash Back 200Tk By bKash"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/paymentAmountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/paymentTime"
            android:fontFamily="@font/comfortaa"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text="+200000"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>