<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/m1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comfortaa"
        android:text="Bank Transfer"
        android:textColor="@color/black"
        android:textSize="21sp" />
    <ImageView
        android:id="@+id/bCloseIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="20dp"
        android:background="@drawable/dash_strock"
        android:layout_below="@id/m1">

        <ImageView
            android:id="@+id/cityBank"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/dutch_bangla_bank"/>
        <TextView
            android:id="@+id/cityTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="DBBL TRANSFER"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banktext1"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_light"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/cityBank"/>
    <TextView
        android:id="@+id/bb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/b1"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_light"
        android:layout_below="@+id/cityBank"/>

    <TextView
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banktext2"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_light"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/b1"/>
    <TextView
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banktext3"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_light"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/b2"/>
    <TextView
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banktext4"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_light"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/b3"/>
    <TextView
        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banktext0"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_light"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/b4"/>
    <TextView
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banktext5"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_light"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/b0"/>

        <TextView
            android:id="@+id/b6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/banktext6"
            android:textSize="12sp"
            android:background="@color/bg"
            android:padding="3dp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/comfortaa_light"
            android:textColor="@color/GRed"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/b5"/>
    </RelativeLayout>
</RelativeLayout>